<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ECommerceWeb</title>
    <script type="importmap"></script>
    <link rel="stylesheet"
          href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.13.1/font/bootstrap-icons.min.css" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ECommerceWeb.styles.css" asp-append-version="true" />
    <link href="~/layoutAssets/style.css" rel="stylesheet" />
</head>
<body>
    <div id="overlay-all">
        <div id="header-menu-sidebar">
            <div id="sidebar-top-container">
                <button><i class="bi bi-x-lg"></i> Close</button>
            </div>
            <ul>
                <li>
                    <a href="#">Category</a>
                </li>
            </ul>
        </div>
    </div>
    <header class="home-top">
        <nav id="header-navbar" class="home-top">
            <button id="header-menu">
                <i class="bi bi-list"></i>
            </button>
            <div id="header-logo" class="home-top"><h1>Dior</h1></div>
            <div id="header-user">
                <ul>
                    <li>
                        <a href="#">
                            <i class="bi bi-bag"></i>
                        </a>
                    </li>
                    <li>
                        <a href="#">
                            <i class="bi bi-telephone"></i>
                        </a>
                    </li>
                    <li id="user-toggle-btn">
                        <i class="bi bi-person"></i>
                    </li>
                </ul>
            </div>
            <div id="user-identity" class="dropbar-close">
                <ul>
                    <li class="dropbar-close">
                        <a href="#">Register</a>
                    </li>
                    <li class="dropbar-close">
                        <a href="#">Login</a>
                    </li>
                </ul>
            </div>
        </nav>
    </header>
    <div class="container mt-4">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - ECommerceWeb - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/layoutAssets/script.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
