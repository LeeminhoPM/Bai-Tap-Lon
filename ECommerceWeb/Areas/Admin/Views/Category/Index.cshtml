@model List<Category>

@section naviheader {
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="~/layout/adminPageAssets/index3.html" class="nav-link">Home</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="#" class="nav-link">Danh mục</a>
        </li>
    </ul>
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Quản lý danh mục</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Home</a></li>
                    <li class="breadcrumb-item active">Danh mục</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">
    <!-- Default box -->
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Danh sách danh mục</h3>

            <div class="card-tools">
                <a asp-area="Admin" asp-action="Upsert" asp-controller="Category" class="btn btn-primary">Thêm mới</a>
            </div>
        </div>
        <div class="card-body">

            <table class="table table-hover">
                <thead>
                    <tr>
                        <th width="10%">STT</th>
                        <th width="25%">Tên danh mục</th>
                        <th width="25%">Ảnh danh mục</th>
                        <th width="10%">Hoạt động</th>
                        <th width="15%">Ngày tạo</th>
                        <th width="15%"></th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        @foreach (var item in Model)
                        {
                            <tr id="trow-@item.CategoryId">
                                <td>@item.CategoryId</td>
                                <td>@item.CategoryName</td>
                                <td>
                                    <img src="@item.CategoryImageUrl" class="rounded img-fluid object-fit-contain" />    
                                </td>
                                <td>@item.IsActive</td>
                                <td>@item.CreatedDate</td>
                                <td>
                                    <a asp-area="Admin" asp-controller="Category" asp-action="Upsert" asp-route-id="@item.CategoryId" class="btn btn-primary">
                                        <i class="bi bi-pencil-square"></i> Sửa
                                    </a>
                                    <a asp-action="Index" data-id="@item.CategoryId" class="btn btn-danger my-btn-delete">
                                        <i class="bi bi-trash"></i> Xóa
                                    </a>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="4">Không có bản ghi nào</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <!-- /.card-body -->
        <div class="card-footer">
        </div>
        <!-- /.card-footer-->
    </div>
    <!-- /.card -->
</section>
<!-- /.content -->

@section scripts {
    <script>
        $(document).ready(function () {
            $("body").on("click", ".my-btn-delete", function () {
                var id = $(this).data("id");
                var conf = confirm("Bạn muốn xóa bản ghi này không");
                if (conf == true) {
                    $.ajax({
                        url: "/Admin/Category/Delete",
                        type: "POST",
                        data: { id: id },
                        success: function(rs) {
                            if (rs.success) {
                                $("#trow-" + id).remove();
                            }
                            else {
                                alert("Xóa không thành công");
                            }
                        }
                    });
                }
            });
        });
    </script>
}