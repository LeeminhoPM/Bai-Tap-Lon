@model Category

@{
    ViewBag.Title = "Danh mục";
}

@section naviheader {
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="~/adminPageAssets/index3.html" class="nav-link">Trang chủ</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="#" class="nav-link">@ViewBag.Title</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="#" class="nav-link">@(Model.CategoryId == 0 ? "Thêm mới" : "Cập nhật")</a>
        </li>
    </ul>
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Quản lý @ViewBag.Title</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">@ViewBag.Title</a></li>
                    <li class="breadcrumb-item active">@((Model.CategoryId == 0 ? "Thêm mới" : "Cập nhật") + " " + ViewBag.Title)</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">
    <!-- Default box -->
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Thông tin @ViewBag.Title</h3>
        </div>
        <div class="card-body">
            <div class="bs-stepper linear">

                <div class="bs-stepper-content">
                    <form method="post" enctype="multipart/form-data">
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true)
                        <input asp-for="CategoryId" hidden />
                        <input asp-for="CategoryImageUrl" hidden />
                        <!-- your steps content here -->
                        <div id="logins-part" class="content active dstepper-block" role="tabpanel" aria-labelledby="logins-part-trigger">
                            <div class="form-group">
                                <label asp-for="CategoryName"></label>
                                <input asp-for="CategoryName" class="form-control" placeholder="Tên danh mục">
                                <span asp-validation-for="CategoryName" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="IsActive"></label>
                                <div>
                                    <div class="form-check-inline">
                                        <input type="radio" asp-for="IsActive" value="@true" class="form-check-input">
                                        <lable class="form-check-label ms-2">Kích hoạt</lable>
                                    </div>
                                    <div class="form-check-inline">
                                        <input type="radio" asp-for="IsActive" value="@false" class="form-check-input">
                                        <lable class="form-check-label ms-2">Không kích hoạt</lable>
                                    </div>
                                </div>
                                <span asp-validation-for="IsActive" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label asp-for="CategoryImageUrl"></label>
                            <div class="input-group">
                                <div class="custom-file">
                                    <input type="file" id="customFile" name="file" class="custom-file-input">
                                    <label for="customFile" class="custom-file-label" id="file-label">
                                        @(Model.CategoryImageUrl == null ? "Chọn file" : Model.CategoryImageUrl.ToString())
                                    </label>
                                </div>
                            </div>
                            <span asp-validation-for="CategoryImageUrl" class="text-danger"></span>
                        </div>

                        <div class="form-group mt-3">
                            @if (!string.IsNullOrEmpty(Model.CategoryImageUrl))
                            {
                                <img id="image-preview" src="@Model.CategoryImageUrl" alt="Xem trước ảnh" style="width: 200px; height: 150px; object-fit: contain; border: 1px solid #ccc; padding: 5px;" />
                            }
                            else
                            {
                                <img id="image-preview" src="#" alt="Xem trước ảnh" style="width: 200px; height: 150px; object-fit: contain; border: 1px solid #ccc; padding: 5px; display: none;" />
                            }
                        </div>
                        <a asp-area="Admin" asp-controller="Category" asp-action="Index" class="btn btn-danger">Quay lại</a>
                        <button type="submit" class="btn btn-primary">@(Model.CategoryId == 0 ? "Thêm mới" : "Cập nhật")</button>
                    </form>
                </div>
            </div>
        </div>
        <!-- /.card-body -->
        <div class="card-footer">
        </div>
        <!-- /.card-footer-->
    </div>
    <!-- /.card -->
</section>
<!-- /.content -->
@section scripts {
    @{
        // Bạn cần đảm bảo file _ValidationScriptsPartial tồn tại
        // Ví dụ: trong /Areas/Admin/Views/Shared/
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        $(document).ready(function () {

            // Lắng nghe sự kiện thay đổi trên input file
            $('#customFile').on('change', function() {
                // 1. Cập nhật tên file trên label (cho Bootstrap custom-file)
                var fileName = $(this).val().split('\\').pop();

                if (fileName) {
                    $('#file-label').text(fileName);
                } else {
                    // Khôi phục text mặc định nếu không có file nào được chọn
                    $('#file-label').text('@(Model.CategoryImageUrl == null ? "Chọn file" : Model.CategoryImageUrl.ToString())');
                }

                // 2. Hiển thị ảnh preview
                if (this.files && this.files[0]) {
                    var reader = new FileReader();

                    reader.onload = function (e) {
                        // Cập nhật src của thẻ <img> và hiển thị nó
                        $('#image-preview')
                            .attr('src', e.target.result)
                            .show();
                    };

                    reader.readAsDataURL(this.files[0]);
                } else {
                    // Nếu không có file được chọn, ẩn ảnh preview
                    $('#image-preview').hide();
                }
            });
        });
    </script>
}