@using ECommerceWeb.Areas.Admin.Controllers
@model PagedSubCategoryViewModel

@{
    ViewBag.Title = "Danh mục con";
    // Lấy giá trị tìm kiếm để giữ lại trong ô tìm kiếm
    var searchText = Model?.SearchText ?? "";
    // Lấy PageIndex hiện tại để xây dựng link phân trang
    var currentPage = Model?.PageIndex ?? 1;
}

@section naviheader {
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="~/layout/adminPageAssets/index3.html" class="nav-link">Home</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="#" class="nav-link">@ViewBag.Title</a>
        </li>
    </ul>
}

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Quản lý @ViewBag.Title</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Home</a></li>
                    <li class="breadcrumb-item active">@ViewBag.Title</li>
                </ol>
            </div>
        </div>
    </div>
</section>
<section class="content">
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Danh sách @ViewBag.Title</h3>

            <div class="card-tools">
                <a asp-action="Upsert" class="btn btn-primary">Thêm mới</a>
                <a id="delete-all-btn" class="btn btn-danger">Xóa lựa chọn</a>
            </div>
        </div>
        <div class="card-body">
            <div class="row mb-3">
                <div class="col-6">
                    <form asp-action="Index" method="get">
                        <div class="input-group input-group-sm">
                            @Html.TextBox("searchText", null)
                            <span class="input-group-append">
                                <button class="btn btn-info btn-flat" type="submit">Tìm kiếm</button>
                            </span>
                        </div>
                    </form>
                </div>
            </div>

            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>
                            <input type="checkbox" id="select-all-cbox" />
                        </th>
                        <th class="text-center">STT</th>
                        <th class="text-center">Tên danh mục</th>
                        <th class="text-center">Ảnh danh mục</th>
                        <th class="text-center">Mã danh mục cha</th>
                        <th class="text-center">Hoạt động</th>
                        <th class="text-center">Ngày tạo</th>
                        <th class="text-center"></th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.SubCategories.Any())
                    {
                        @foreach (var item in Model.SubCategories)
                        {
                            <tr id="trow-@item.SubCategoryId">
                                <td>
                                    <input type="checkbox" class="select-input" value="@item.SubCategoryId" />
                                </td>
                                <td class="text-center">@item.SubCategoryId</td>
                                <td class="text-center">@item.SubCategoryName</td>
                                <td class="text-center">
                                    <img width="100" src="@item.SubCategoryImageUrl" class="rounded img-fluid object-fit-contain" />
                                </td>
                                <td class="text-center">@item.CategoryId</td>
                                <td class="text-center">
                                    <a data-id="@item.SubCategoryId" class="my-active-btn">
                                        @(item.IsActive? Html.Raw("<i class=\"bi bi-check-lg text-success\" style=\" -webkit-text-stroke: 1px; \"></i>") : Html.Raw("<i class=\"bi bi-x-lg text-danger\" style=\" -webkit-text-stroke: 1px; \"></i>"))
                                    </a>
                                </td>
                                <td class="text-center">@item.CreatedDate.ToString("dd/MM/yyyy")</td>
                                <td class="text-center">
                                    <a asp-action="Upsert" asp-route-id="@item.SubCategoryId" class="btn btn-primary">
                                        <i class="bi bi-pencil-square"></i> Sửa
                                    </a>
                                    <a asp-action="Index" data-id="@item.SubCategoryId" class="btn btn-danger my-btn-delete">
                                        <i class="bi bi-trash"></i> Xóa
                                    </a>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="8">Không có bản ghi nào</td>
                        </tr>
                    }
                </tbody>
            </table>
                <div class="row mt-4">
                    <div class="col-12" style="text-align:center">
                        <ul class="pagination justify-content-center">
                       
                            <li class="page-item @(currentPage <= 1 ? "disabled" : "")"><a class="page-link" asp-action="Index" asp-route-page="@(currentPage - 1)" asp-route-searchText="@searchText">Trước</a> </li>

                        @for (int i = 1; i <= Model.TotalPages; i++)
                        {
                            <li class="page-item @(i == currentPage ? "active" : "")">
                                <a class="page-link" asp-action="Index" asp-route-page="@i" asp-route-searchText="@searchText">@i</a>
                            </li>
                        }

                       
                        <li class="page-item @(currentPage >= Model.TotalPages ? "disabled" : "")">
                            <a class="page-link" asp-action="Index" asp-route-page="@(currentPage + 1)" asp-route-searchText="@searchText">Sau</a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="card-footer">
        </div>
        </div>
    </section>
@section scripts {
    <script>
        $(document).ready(function () {
            
            // Xóa nhiều
            $("body").on("click", "#delete-all-btn", function(e) {
                e.preventDefault();
                var str = "";
                var checkboxs = $(this).parents(".card").find("tr td input:checkbox.select-input:checked"); 
                var i = 0;
                
                checkboxs.each(function() {
                    if (i === 0) {
                        str += $(this).val();
                    } else {
                        str += "," + $(this).val(); 
                    }
                    i++;
                });

                if (str.length > 0) {
                    var conf = confirm("Bạn có muốn xóa " + i + " bản ghi đã chọn không?");
                    if (conf === true) {
                        $.ajax({
                            url: "/Admin/SubCategory/DeleteAll",
                            type: "POST",
                            data: { ids : str },
                            success: function(rs) {
                                if (rs.success) {
                                    location.reload();
                                }
                            }
                        });
                    }
                } else {
                     alert("Vui lòng chọn ít nhất một bản ghi để xóa.");
                }
            });

            // Chọn tất cả
            $("body").on("change", "#select-all-cbox", function() {
                var checkStatus = this.checked;
                var checkboxs = $(this).parents(".card-body").find("tr td input:checkbox.select-input");
                checkboxs.prop('checked', checkStatus); 
            });

            // Xóa một mục
            $("body").on("click", ".my-btn-delete", function (e) {
                e.preventDefault(); 
                var id = $(this).data("id");
                var conf = confirm("Bạn muốn xóa bản ghi này không");
                if (conf == true) {
                    $.ajax({
                        url: "/Admin/SubCategory/Delete",
                        type: "DELETE", 
                        data: { id: id },
                        success: function(rs) {
                            if (rs.success) {
                                $("#trow-" + id).remove();
                            }
                            else {
                                alert("Xóa không thành công: " + rs.message);
                            }
                        }
                    });
                }
            });

            // Chuyển trạng thái Hoạt động
            $("body").on("click", ".my-active-btn", function () {
                var id = $(this).data("id");
                var btn = $(this);
                $.ajax({
                    url: "/Admin/SubCategory/IsActive",
                    type: "POST",
                    data: { id: id },
                    success: function(rs) {
                        if (rs.success) {
                            if (rs.IsActive) {
                                btn.html("<i class=\"bi bi-check-lg text-success\" style=\" -webkit-text-stroke: 1px; \"></i>");
                            }
                            else {
                                btn.html("<i class=\"bi bi-x-lg text-danger\" style=\" -webkit-text-stroke: 1px; \"></i>"); 
                            }
                        }
                    }
                });
            });
        });
    </script>
}