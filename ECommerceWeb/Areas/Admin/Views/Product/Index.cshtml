@model IPagedList<Product>

@{
    ViewBag.Title = "Sản phẩm";
}

@section naviheader {
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="~/layout/adminPageAssets/index3.html" class="nav-link">Home</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="#" class="nav-link">@ViewBag.Title</a>
        </li>
    </ul>
}

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Quản lý @ViewBag.Title</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Home</a></li>
                    <li class="breadcrumb-item active">@ViewBag.Title</li>
                </ol>
            </div>
        </div>
    </div></section>

<section class="content">
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Danh sách @ViewBag.Title</h3>

            <div class="card-tools">
                <a asp-area="Admin" asp-action="Upsert" class="btn btn-primary">Thêm mới</a>
                <a id="delete-all-btn" class="btn btn-danger">Xóa lựa chọn</a>
            </div>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-6">
                    @using (Html.BeginForm("Index", "Product", FormMethod.Get, new { }))
                    {
                        <div class="input-group input-group-sm">
                            @Html.TextBox("searchText", null, new { id = "searchText", @class = "form-control float-right", placeholder = "Tìm kiếm..." })
                            <span class="input-group-append">
                                <button class="btn btn-info btn-flat" type="submit">Tìm kiếm</button>
                            </span>
                        </div>
                    }
                </div>
            </div>

            <div id="productTable">
                    @Html.Partial("_ProductTable", Model)
            </div>

            <div class="row mt-4">
                <div class="col-12" style="text-align:center">
                    @Html.PagedListPager(Model, page => Url.Action("Index", new { page, pageSize = 10, searchText = ViewBag.SearchText }), 
                    new PagedListRenderOptions(){
                        UlElementClasses = new[] { "pagination", "justify-content-center" },
                        LiElementClasses = new string[] { "page-item" },
                        PageClasses = new string[] { "page-link" }
                    })
                </div>
            </div>
        </div>
        <div class="card-footer">
        </div>
        </div>
    </section>
@section scripts {
    <script>
        $(document).ready(function () {
            // --- Logic Xóa hàng loạt, Xóa đơn lẻ, Kích hoạt (Active) giữ nguyên từ code gốc của bạn ---
            // ... (Đoạn mã JavaScript cho DeleteAll, SelectAll, Delete đơn lẻ, IsActive) ...

            // Xóa hàng loạt
            $("body").on("click", "#delete-all-btn", function(e) {
                e.preventDefault();
                var str = "";
                var checkboxs = $(this).parents(".card").find("tr td input.select-input:checked"); // Chỉ chọn checkbox có class select-input VÀ đã được check
                var i = 0;
                checkboxs.each(function() {
                    if (i === 0) {
                        str += $(this).val();
                    } else {
                        str += ", " + $(this).val();
                    }
                    i++;
                });
                if (str.length > 0) {
                    var conf = confirm("Bạn có muốn xóa " + i + " bản ghi đã chọn này không?");
                    if (conf === true) {
                        $.ajax({
                            url: "/Admin/Product/DeleteAll",
                            type: "POST",
                            data: { ids : str },
                            success: function(rs) {
                                if (rs.success) {
                                    location.reload();
                                }
                            }
                        });
                    }
                } else {
                    alert("Vui lòng chọn ít nhất một sản phẩm để xóa.");
                }
            });

            // Chọn tất cả
            $("body").on("change", "#select-all-cbox", function() {
                var checkStatus = this.checked;
                var checkboxs = $(this).parents(".card-body").find("tr td input.select-input");
                checkboxs.prop('checked', checkStatus);
            });

            // Xóa đơn lẻ
            $("body").on("click", ".my-btn-delete", function () {
                var id = $(this).data("id");
                var conf = confirm("Bạn muốn xóa bản ghi này không");
                if (conf == true) {
                    $.ajax({
                        url: "/Admin/Product/Delete",
                        type: "POST",
                        data: { id: id },
                        success: function(rs) {
                            if (rs.success) {
                                $("#trow-" + id).remove();
                            }
                            else {
                                alert("Xóa không thành công");
                            }
                        }
                    });
                }
            });

            // Kích hoạt/Vô hiệu hóa (IsActive)
            $("body").on("click", ".my-active-btn", function () {
                var id = $(this).data("id");
                var btn = $(this);
                $.ajax({
                    url: "/Admin/Product/IsActive",
                    type: "POST",
                    data: { id: id },
                    success: function(rs) {
                        if (rs.success) {
                            if (rs.IsActive) {
                                btn.html("<i class=\"bi bi-check-lg text-success\" style=\" -webkit-text-stroke: 1px; \"></i>");
                            }
                            else {
                                btn.html("<i class=\"bi bi-x-lg text-danger\" style=\" -webkit-text-stroke: 1px; \"></i>");
                            }
                        }
                    }
                });
            });

            // --- Logic Tìm kiếm AJAX (Keyup) ---
            $("#searchText").on("keyup", function () {
                var searchText = $(this).val();

                // Dùng Ajax để lấy PartialView đã được lọc/tìm kiếm
                $.ajax({
                    url: '@Url.Action("Index", "Product", new { area = "Admin" })',
                    type: 'GET',
                    data: { searchText: searchText, page: 1, pageSize: 10 }, // Đảm bảo luôn quay về trang 1 khi tìm kiếm
                    success: function (result) {
                        // Thay thế toàn bộ nội dung trong thẻ div#productTable bằng PartialView mới (chứa cả bảng và phân trang)
                        $("#productTable").html($(result).find("#productTable").html());
                        
                        // Cập nhật lại phần phân trang
                        $(".row.mt-4 .col-12").html($(result).find(".row.mt-4 .col-12").html());
                    }
                });
            });
        });
    </script>
}