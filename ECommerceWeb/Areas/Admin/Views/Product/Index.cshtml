@model IPagedList<Product>

@{
    ViewBag.Title = "Sản phẩm";
}

@section naviheader {
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="~/layout/adminPageAssets/index3.html" class="nav-link">Home</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="#" class="nav-link">@ViewBag.Title</a>
        </li>
    </ul>
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Quản lý @ViewBag.Title</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Home</a></li>
                    <li class="breadcrumb-item active">@ViewBag.Title</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">
    <!-- Default box -->
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Danh sách @ViewBag.Title</h3>

            <div class="card-tools">
                <a asp-area="Admin" asp-action="Upsert" class="btn btn-primary">Thêm mới</a>
                <a asp-area="Admin" asp-action="Upsert" id="delete-all-btn" class="btn btn-danger">Xóa lựa chọn</a>
            </div>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-6">
                    @using(Html.BeginForm("Index", "Category", FormMethod.Get, new{}))
                    {
                        <div class="input-group input-group-sm">
                            @Html.TextBox("searchText", new { })
                            <span class="input-group-append">
                                <button class="btn btn-info btn-flat" type="submit">Tìm kiếm</button>
                            </span>
                        </div>
                    }
                </div>
            </div>
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>
                            <input type="checkbox" id="select-all-cbox" />
                        </th>
                        <th class="text-center">STT</th>
                        <th class="text-center">Ảnh đại diện</th>
                        <th class="text-center">Tên sản phẩm</th>
                        <th class="text-center">Mô tả ngắn</th>
                        <th class="text-center">Mô tả dài</th>
                        <th class="text-center">Mô tả thêm</th>
                        <th class="text-center">Giá</th>
                        <th class="text-center">Số lượng</th>
                        <th class="text-center">Đơn vị sản xuất</th>
                        <th class="text-center">Mã danh mục</th>
                        <th class="text-center">Mã danh mục con</th>
                        @* <th class="text-center">Đã bán</th> *@
                        <th class="text-center">Có thể custom</th>
                        <th class="text-center">Kích hoạt</th>
                        <th class="text-center">Ngày tạo</th>
                        <th class="text-center"></th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        @foreach (var item in Model)
                        {
                            <tr id="trow-@item.CategoryId">
                                <td>
                                    <input type="checkbox" class="select-input" value="@item.CategoryId" />
                                </td>
                                <td class="text-center">@item.ProductId</td>
                                @* <td class="text-center">
                                    <img width="50" src="@item.ProductImages.FirstOrDefault(x => x.DefaultImage == true).ImageUrl" />
                                </td> *@
                                <td class="text-center">@item.ProductName</td>
                                <td class="text-center">@item.ShortDescription</td>
                                <td class="text-center">@item.LongDescription</td>
                                <td class="text-center">@item.AdditionalDescription</td>
                                <td class="text-center">@item.Price</td>
                                <td class="text-center">@item.Quantity</td>
                                <td class="text-center">@item.CompanyName</td>
                                <td class="text-center">@item.CategoryId</td>
                                <td class="text-center">@item.SubCategoryId</td>
                                @* <td class="text-center">@item.Sold</td> *@
                                <td class="text-center">
                                    <a data-id="@item.ProductId" class="my-active-btn">
                                        @(item.IsCustomized ? Html.Raw("<i class=\"bi bi-check-lg text-success\" style=\" -webkit-text-stroke: 1px; \"></i>") : Html.Raw("<i class=\"bi bi-x-lg text-danger\" style=\" -webkit-text-stroke: 1px; \"></i>"))
                                    </a></td>
                                <td class="text-center">
                                    <a data-id="@item.ProductId" class="my-active-btn">
                                        @(item.IsActive ? Html.Raw("<i class=\"bi bi-check-lg text-success\" style=\" -webkit-text-stroke: 1px; \"></i>") : Html.Raw("<i class=\"bi bi-x-lg text-danger\" style=\" -webkit-text-stroke: 1px; \"></i>"))
                                    </a>
                                </td>
                                <td class="text-center">@item.CreatedDate.ToString("dd/MM/yyyy")</td>
                                <td class="text-center">
                                    <a asp-action="Upsert" asp-route-id="@item.ProductId" class="btn btn-primary">
                                        <i class="bi bi-pencil-square"></i> Sửa
                                    </a>
                                    <a asp-action="Index" data-id="@item.ProductId" class="btn btn-danger my-btn-delete">
                                        <i class="bi bi-trash"></i> Xóa
                                    </a>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="4">Không có bản ghi nào</td>
                        </tr>
                    }
                </tbody>
            </table>

            <div class="row mt-4">
                <div class="col-12" style="text-align:center">
                    @Html.PagedListPager(Model, page => Url.Action("Index", new { page, pageSize = 10 }), 
                    new PagedListRenderOptions(){
                        UlElementClasses = new[] { "pagination", "justify-content-center" },
                        LiElementClasses = new string[] { "page-item" },
                        PageClasses = new string[] { "page-link" }
                    })
                </div>
            </div>
        </div>
        <!-- /.card-body -->
        <div class="card-footer">
        </div>
        <!-- /.card-footer-->
    </div>
    <!-- /.card -->
</section>
<!-- /.content -->
@section scripts {
    <script>
        $(document).ready(function () {
            $("body").on("click", "#delete-all-btn", function(e) {
                e.preventDefault();
                var str = "";
                var checkboxs = $(this).parents(".card").find("tr td input:checkbox");
                var i = 0;
                checkboxs.each(function() {
                    if (this.checked) {
                        checkboxs.attr("selected", "checked");
                        if (i === 0) {
                            str += $(this).val();
                        } else {
                            str += ", " + $(this).val();
                        }
                        i++;
                    } else {
                        checkboxs.attr("selected", "");
                    }
                });
                if (str.length > 0) {
                    var conf = confirm("Bạn có muốn xóa bản ghi này không");
                    if (conf === true) {
                        $.ajax({
                            url: "/Admin/Product/DeleteAll",
                            type: "POST",
                            data: {ids : str },
                            success: function(rs) {
                                if (rs.success) {
                                    location.reload();
                                }
                            }
                        });
                    }
                }
            });

            $("body").on("change", "#select-all-cbox", function() {
                var checkStatus = this.checked;
                var checkboxs = $(this).parents(".card-body").find("tr td input:checkbox");
                checkboxs.each(function() {
                    this.checked = checkStatus;
                    if (this.checked) {
                        checkboxs.attr("selected", "checked");
                    } else {
                        checkboxs.attr("selected", "");
                    }
                });
            });

            $("body").on("click", ".my-btn-delete", function () {
                var id = $(this).data("id");
                var conf = confirm("Bạn muốn xóa bản ghi này không");
                if (conf == true) {
                    $.ajax({
                        url: "/Admin/Product/Delete",
                        type: "POST",
                        data: { id: id },
                        success: function(rs) {
                            if (rs.success) {
                                $("#trow-" + id).remove();
                            }
                            else {
                                alert("Xóa không thành công");
                            }
                        }
                    });
                }
            });

            $("body").on("click", ".my-active-btn", function () {
                var id = $(this).data("id");
                var btn = $(this);
                $.ajax({
                    url: "/Admin/Product/IsActive",
                    type: "POST",
                    data: { id: id },
                    success: function(rs) {
                        if (rs.success) {
                            if (rs.IsActive) {
                                btn.html("<i class=\"bi bi-check-lg text-success\" style=\" -webkit-text-stroke: 1px; \"></i>");
                            }
                            else {
                                btn.html("<i class=\"bi bi-check-lg text-danger\" style=\" -webkit-text-stroke: 1px; \"></i>");
                            }
                        }
                    }
                });
            });
        });
    </script>
}