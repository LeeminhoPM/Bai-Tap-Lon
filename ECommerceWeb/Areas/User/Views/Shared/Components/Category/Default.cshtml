@model IEnumerable<Category>

<div class="flex-w flex-l-m filter-tope-group m-tb-10">
    <a asp-controller="Shop" asp-action="Index" class="stext-106 cl6 hov1 bor3 trans-04 m-r-32 m-tb-5 how-active1" data-filter="*">
        All Products
    </a>

    @foreach (var item in Model)
    {
        <a asp-controller="Shop" asp-action="Index" asp-route-id="@item.CategoryId" class="stext-106 cl6 hov1 bor3 trans-04 m-r-32 m-tb-5" data-filter=".women">
            @item.CategoryName
        </a>
    }
</div>